mixin header(title, subtitle, mainHeader)
  header.header
    if mainHeader
      .header__content
        h1
          a(href="/")!=title
        p!=subtitle
      .header__aside
        img(src="/assets/images/me.webp", alt="Mike Carter" width="208" height="208" loading="lazy")
    else
      .header__content
        h1!=title
        p!=subtitle

